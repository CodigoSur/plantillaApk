<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoreproductor">

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_width="750dp"
        android:layout_height="500dp"
        android:background="@drawable/disco">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linea"
        android:layout_width="450dp"
        android:background="#d7d7d7"
        android:orientation="horizontal"
        android:layout_height="5dp"
        android:layout_marginTop="670dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea2"
        android:layout_width="450dp"
        android:background="#d7d7d7"
        android:orientation="horizontal"
        android:layout_height="5dp"
        android:layout_marginTop="890dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" >

    </LinearLayout>




    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton android:id="@+id/play"
            android:src="@drawable/ic_reproductor_play"
            tools:ignore="ContentDescription"
            android:background="@drawable/boton_redondo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton android:id="@+id/stop"
            android:src="@drawable/ic_reproductor_stop"
            tools:ignore="ContentDescription"
            android:background="@drawable/boton_redondo"
            android:layout_alignBottom="@+id/play"
            android:layout_toRightOf="@+id/play"
            android:layout_toEndOf="@+id/play"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="110dp"
            android:layout_height="110dp" />

        <ImageButton android:id="@+id/pause"
            android:src="@drawable/ic_reproductor_pause"
            android:contentDescription=""
            tools:ignore="ContentDescription"
            android:background="@drawable/boton_redondo"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp"
            android:layout_alignTop="@+id/stop"
            android:layout_toLeftOf="@+id/play"
            android:layout_toStartOf="@+id/play"
            android:layout_width="110dp"
            android:layout_height="110dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="200dp">


        <TextView
            android:text="@string/solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="#ffffff"
            android:id="@+id/textoSolicitud"
            android:textSize="@dimen/LinkReproductorTamaÃ±oLetra"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp" />
    </RelativeLayout>

</RelativeLayout>